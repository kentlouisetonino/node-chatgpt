{
  "name": "node-chatgpt",
  "version": "1.0.0",
  "main": "index.js",
  "repository": "git@github.com:kentlouisetonino/node-chatgpt.git",
  "author": "Kent Louise Tonino <tonino.kentlouise@gmail.com>",
  "license": "MIT",
  "scripts": {
    "build": "tsc --build",
    "start": "tsc --build && node ./dist/server.js",
    "dev": "nodemon --config nodemon.json ./src/server.ts",
    "format": "prettier --write \"./**/*.{html,css,ts,js,json,prettierrc,yml}\"",
    "test:all": "jest --watchAll --verbose --coverage --runInBand --no-cache"
  },
  "dependencies": {
    "@types/dotenv": "^8.2.0",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.12",
    "@types/morgan": "^1.9.9",
    "@types/node-fetch": "2",
    "@types/prettier": "^3.0.0",
    "@types/superagent": "^8.1.4",
    "@types/supertest": "^6.0.2",
    "dotenv": "^16.4.5",
    "express": "^4.18.3",
    "jest": "^29.7.0",
    "morgan": "^1.10.0",
    "node-fetch": "3.3.2",
    "prettier": "^3.2.5",
    "superagent": "^8.1.2",
    "supertest": "^6.3.4",
    "ts-jest": "^29.1.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.4.2"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "./src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "testEnvironment": "node",
    "modulePathIgnorePatterns": [
      "<rootDir>/coverage/"
    ]
  }
}
